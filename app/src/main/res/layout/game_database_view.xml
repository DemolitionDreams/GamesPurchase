<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/custom_shape_rectangular">

    <TextView
        android:id="@+id/name_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_marginStart="5dp"
        android:layout_toStartOf="@+id/saga_image"
        android:autoSizeMaxTextSize="30sp"
        android:autoSizeMinTextSize="5sp"
        android:autoSizeTextType="uniform"
        android:maxLines="1"
        android:text="Nome"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/saga_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/platform_image"
        android:layout_toRightOf="@id/name_text"
        app:srcCompat="@drawable/icon_ps2" />

    <ImageView
        android:id="@+id/platform_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toStartOf="@+id/finished_image"
        app:srcCompat="@drawable/icon_ps3" />

    <ImageView
        android:id="@+id/finished_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/icon_finished" />

    <ImageView
        android:id="@+id/not_finished_image"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:visibility="invisible"
        app:srcCompat="@drawable/icon_not_finished" />

</RelativeLayout>