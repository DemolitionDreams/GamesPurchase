<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_centerVertical="true"
    android:layout_centerHorizontal="true"
    android:background="@drawable/custom_shape_popup">

    <TextView
        android:id="@+id/edit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:text="ciao"
        android:textStyle="bold"
        android:textAlignment="center"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/delete_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/edit_text"
        android:background="@drawable/custom_shape_aggiungi_button"
        android:onClick="onClickAddBuyGame"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/delete_button"
        android:layout_alignBottom="@+id/delete_button"
        android:layout_alignStart="@+id/delete_button"
        android:layout_alignEnd="@+id/delete_button"
        android:layout_centerHorizontal="true"
        android:text="@string/remove"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/nullify_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@id/delete_button"
        android:background="@drawable/custom_shape_aggiungi_button"
        android:onClick="onClickAddBuyGame"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/nullify_button"
        android:layout_alignBottom="@+id/nullify_button"
        android:layout_alignStart="@+id/nullify_button"
        android:layout_alignEnd="@+id/nullify_button"
        android:layout_centerHorizontal="true"
        android:text="@string/nullifyAction"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:gravity="center"/>

</RelativeLayout>
