<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ScheduleActivity">

    <ImageButton
        android:id="@+id/schedule_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/custom_shape_circle"
        android:onClick="onClickAddScheduleGame" />

    <AutoCompleteTextView
        android:id="@+id/day_text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:layout_below="@+id/schedule_button"
        android:completionThreshold="3"
        android:hint="Giorno"
        android:padding="0dp"
        android:paddingStart="15dp" />

    <AutoCompleteTextView
        android:id="@+id/time_text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:completionThreshold="3"
        android:layout_below="@+id/day_text"
        android:hint="Orario di Inizio"
        android:padding="0dp"
        android:paddingStart="15dp" />

    <AutoCompleteTextView
        android:id="@+id/name_text"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        android:completionThreshold="3"
        android:layout_below="@id/time_text"
        android:hint="Nome Gioco"
        android:padding="0dp"
        android:paddingStart="15dp" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/name_text"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true">

        <ImageButton
            android:id="@+id/saga_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_shape_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/saga_button"
            android:layout_alignTop="@+id/saga_button"
            android:layout_alignEnd="@+id/saga_button"
            android:layout_alignBottom="@+id/saga_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Saghe"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/work_in_progress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignTop="@+id/saga_button"
            android:layout_alignEnd="@+id/saga_button"
            android:layout_alignBottom="@+id/saga_button"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="10dp"
            android:background="@drawable/icon_work_in_progress" />

        <ImageButton
            android:id="@+id/database_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_below="@+id/saga_button"
            android:background="@drawable/custom_shape_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/database_button"
            android:layout_alignTop="@+id/database_button"
            android:layout_alignEnd="@+id/database_button"
            android:layout_alignBottom="@+id/database_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Collezione"
            android:textColor="@color/black"
            android:textSize="30sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/buy_button"
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/database_button"
            android:background="@drawable/custom_shape_main" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/buy_button"
            android:layout_alignTop="@+id/buy_button"
            android:layout_alignEnd="@+id/buy_button"
            android:layout_alignBottom="@+id/buy_button"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Lista degli Acquisti"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold" />

    </RelativeLayout>

</RelativeLayout>