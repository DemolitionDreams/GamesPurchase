<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ScheduleActivity">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/day_button"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:autoSizeMaxTextSize="12sp"
        android:autoSizeMinTextSize="1sp"
        android:autoSizeTextType="uniform"
        android:text="Day"
        android:textStyle="bold"
        android:textAlignment="center"
        android:background="@drawable/custom_shape_day" />

    <RelativeLayout
        android:id="@+id/time_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_button"
        android:layout_marginTop="20dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/zero_time_button"
            android:tag="0"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_time"
            android:text="Zero"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/one_time_button"
            android:tag="1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/zero_time_button"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_time"
            android:text="One"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/two_time_button"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/one_time_button"
            android:layout_marginStart="15dp"
            android:layout_marginTop="20dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_time"
            android:tag="2"
            android:text="Two"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/three_time_button"
            android:tag="3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/two_time_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:text="Three"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/custom_shape_time" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/four_time_button"
            android:tag="4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/three_time_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:text="Four"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/custom_shape_time" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/five_time_button"
            android:tag="5"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/four_time_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:text="Five"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/custom_shape_time" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/six_time_button"
            android:tag="6"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/five_time_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:text="Six"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/custom_shape_time" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/seven_time_button"
            android:tag="7"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/six_time_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:text="Seven"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/custom_shape_time" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/eight_time_button"
            android:tag="8"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_below="@+id/seven_time_button"
            android:layout_marginTop="20dp"
            android:layout_marginStart="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:text="Eight"
            android:textStyle="bold"
            android:textAlignment="center"
            android:background="@drawable/custom_shape_time" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/game_relative_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/day_button"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/time_relative_layout">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID0"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:tag="ID0"
            android:text="Zero"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID1"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ID0"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:tag="ID1"
            android:text="One"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID2"
            android:tag="ID2"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/ID1"
            android:layout_marginTop="20dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:text="Two"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID3"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ID2"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:tag="ID3"
            android:text="Three"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID4"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ID3"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:tag="ID4"
            android:text="Four"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID5"
            android:tag="ID5"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/ID4"
            android:layout_marginTop="20dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:text="Five"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID6"
            android:tag="ID6"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="15dp"
            android:layout_below="@+id/ID5"
            android:layout_marginTop="20dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:text="Six"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID7"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ID6"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:tag="ID7"
            android:text="Seven"
            android:textAlignment="center"
            android:textStyle="bold" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/ID8"
            android:layout_width="2000dp"
            android:layout_height="50dp"
            android:layout_below="@+id/ID7"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:autoSizeMaxTextSize="12sp"
            android:autoSizeMinTextSize="1sp"
            android:autoSizeTextType="uniform"
            android:background="@drawable/custom_shape_schedule"
            android:tag="ID8"
            android:text="Eight"
            android:textAlignment="center"
            android:textStyle="bold" />

    </RelativeLayout>
</RelativeLayout>